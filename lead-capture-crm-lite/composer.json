{
  "name": "lcc/lead-capture-crm-lite",
  "description": "A lightweight WordPress plugin for capturing leads and managing CRM functionalities.",
  "type": "wordpress-plugin",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=8.0",
    "composer/installers": "^1.9",
    "wpackagist-plugin/advanced-custom-fields": "^5.9"
  },
  "autoload": {
    "psr-4": {
      "LCCRL\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LeadCaptureCRM\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs",
    "analyze": "phpstan analyse"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
